.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 110px;
  background-color: #ffffff;
  margin-bottom: 8px;
}
.total {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10px;
}
.top_right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 10px;
}
.asset {
  font-size: 12px;
  color: #5e5e5e;
  padding-bottom: 10px;
}
.amount {
  font-weight: bold;
  font-size: 24px;
  color: #5e5e5e;
}
.text_btn {
  color: #e38537;
  font-size: 14px;
}
.row {
  height: 55px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1.5px solid #ebebeb;
}
.box {
  height: 100%;
  width: 50%;
  background-color: #ffffff;
  border-right: 0.5px solid #ebebeb;
  border-left: 0.5px solid #ebebeb;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.investing {
  color: #e38537;
  font-size: 15px;
}
.profit {
  font-size: 15px;
  color: #5e5e5e;
}
.rmb {
  margin-top: 5px;
  color: #929292;
  font-size: 14px;
}
.list {
  background-color: #ffffff;
  width: 100%;
  margin-top: 8px;
}
.listItem {
  height: 35px;
  border-bottom: 0.5px solid #ebebeb;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item_text {
  font-size: 13px;
  color: #5e5e5e;
}
.btn_container {
  padding-top: 10px;
  background-color: #ffffff;
  width: 100%;
}
.button {
  width: 90%;
  margin-top: 15px;
}
